<h1>Listing workflows</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Size</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workflows.each do |workflow| %>
  <tr>
    <td><%= workflow.title %></td>
    <td><%= workflow.description %></td>
    <td><%= number_to_human_size(workflow.content_blob.data.size) %></td>
    <td><%= workflow.author.name %></td>
    <td><%= link_to 'Show', workflow %></td>
    <td><%= link_to 'Edit', edit_workflow_path(workflow) if workflow.can?(current_user, :edit) %></td>
    <td><%= link_to 'Destroy', workflow, confirm: 'Are you sure?', method: :delete  if workflow.can?(current_user, :manage  ) %></td>
  </tr>
<% end %>
</table>

<br />

