<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, user %></td>
    <td><%= user.name %></td>
    <td><%= user.email.gsub(/[a-zA-Z0-9_-]/,"*") %></td>
  </tr>
<% end %>
</table>
